    # mkdir -p openfoam
    # mv OpenFOAM-v2212/ ThirdParty-v2212/ openfoam/.
    # cd openfoam
    # mkdir -p user-v2212

    # # Activate OpenFOAM environment
    # source /usr/lib/openfoam/OpenFOAM-v2212/etc/bashrc

    # # ThirdParty build
    # cd ThirdParty-v2212

    # ./Allwmake -j

    # # # OpenFOAM build
    # cd ../OpenFOAM-v2212
