Bootstrap: docker
From: opensuse/leap

%environment
    export OMPI_DIR=/usr/lib/openmpi-4.1.4
    # export OMPI_DIR=/usr/lib/openmpi-4.1.4
    export SINGULARITY_OMPI_DIR=$OMPI_DIR
    export SINGULARITYENV_APPEND_PATH=$OMPI_DIR/bin
    export SINGULAIRTYENV_APPEND_LD_LIBRARY_PATH=$OMPI_DIR/lib
    # For OpenFOAM
    # export PATH=$OMPI_DIR/bin:$PATH
    # export LD_LIBRARY_PATH=$OMPI_DIR/lib:$LD_LIBRARY_PATH

%files
    # src/OpenFOAM-v2212.tgz /usr/lib
    # src/ThirdParty-v2212.tgz /usr/lib
    src/openmpi-4.1.4.tar.gz /usr/lib

%post -c /bin/bash

    # Prerequisites
    zypper refresh
    zypper update
    zypper install -y gcc12 gcc12-c++ gcc-fortran
    zypper install -y -t pattern devel_C_C++
    zypper install -y cmake gnuplot flex libfl-devel readline-devel zlib-devel
    zypper install -y gmp-devel mpfr-devel mpc-devel
    zypper install -y wget tar devtoolset-11

    ln -s /usr/bin/gcc-12 /usr/bin/gcc
    ln -s /usr/bin/g++-12 /usr/bin/g++

    export CC=$(which gcc-12)
    export CXX=$(which g++-12)

    # OpenMPI-4.1.4
    cd /usr/lib
    tar -xf openmpi-4.1.4.tar.gz
    cd openmpi-4.1.4
    mkdir -p build && cd build
    ../configure --prefix=$(cd .. && pwd) CC=$(which gcc) CXX=$(which g++) FC=$(which gfortran)

    # Export MPI Variables
    export OMPI_DIR=/usr/lib/openmpi-4.1.4
    export MPI_ROOT=$OMPI_DIR
    export PATH=$PATH:$OMPI_DIR/bin
    export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$OMPI_DIR//lib


